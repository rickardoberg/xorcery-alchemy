{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "http://xorcery.exoreaction.com/modules/com.exoreaction.xorcery.alchemy/xorcery-alchemy-source-file-yaml/schema",
  "title": "xorcery-alchemy-source-file-yaml configuration JSON Schema",
  "$defs": {
    "sourcejar": {
      "anyOf": [
        {
          "allOf": [
            {
              "$ref": "#/$defs/jar"
            },
            {
              "properties": {
                "jar": {
                  "const": "yaml"
                },
                "file": {
                  "type": "string",
                  "description": "Resource name in project or URL to YAML file"
                }
              }
            }
          ]
        }
      ]
    }
  }
}